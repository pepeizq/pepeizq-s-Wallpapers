<Page
    x:Class="pepeizqs_Wallpapers.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:fa="using:FontAwesome.UWP"
    
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="Page_Loaded">

    <Grid Background="{StaticResource ColorGridPrincipal}">
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="gridTitulo" Grid.Row="0" Background="{StaticResource GridTituloBackground}">
            <TextBlock x:Name="tbTitulo" Margin="50,0,0,0" FontSize="13" Foreground="White" VerticalAlignment="Center"/>
        </Grid>

        <NavigationView x:Name="nvPrincipal" Grid.Row="1" Loaded="Nv_Loaded" ItemInvoked="Nv_ItemInvoked"
                        OpenPaneLength="200" AlwaysShowHeader="False" IsSettingsVisible="False">
            <NavigationView.PaneFooter>
                <StackPanel Orientation="Vertical">
                    <NavigationViewItem x:Name="itemMasCosas" Tapped="Nv_ItemFlyout" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                        <FlyoutBase.AttachedFlyout>
                            <MenuFlyout x:Name="botonMasCosasMenu"/>
                        </FlyoutBase.AttachedFlyout>
                    </NavigationViewItem>
                </StackPanel>
            </NavigationView.PaneFooter>

            <Grid>
                <Grid.Transitions>
                    <TransitionCollection>
                        <EdgeUIThemeTransition Edge="Bottom"/>
                    </TransitionCollection>
                </Grid.Transitions>

                <Grid.Background>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="#FFE4E4E4" Offset="0.5" />
                        <GradientStop Color="#FFBFBFBF" Offset="1.0" />
                    </LinearGradientBrush>
                </Grid.Background>

                <Grid x:Name="gridFondos">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
                        <fa:FontAwesome Icon="InfoCircle" Foreground="{StaticResource BrushSecundario}"/>
                        <TextBlock x:Uid="tbSelectWallpaper" Margin="10,0,0,0"/>
                    </StackPanel>
                   
                    <Pivot x:Name="pivotFondos" Grid.Row="1" Margin="0,0,0,10">
                        <PivotItem Tag="0">
                            <PivotItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <controls:ImageEx Source="Assets/Webs/bing.png" IsCacheEnabled="True" Width="16" Height="16" VerticalAlignment="Center" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton"/>
                                    <TextBlock Text="Bing" Padding="10,0,0,0" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton"/>
                                </StackPanel>
                            </PivotItem.Header>

                            <Grid>
                                <Border BorderThickness="1" BorderBrush="{StaticResource BrushSecundario}">
                                    <controls:ImageEx x:Name="imagenBing" IsCacheEnabled="True" Stretch="UniformToFill"/>
                                </Border>
                            </Grid>
                        </PivotItem>
                        <PivotItem Tag="1">
                            <PivotItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <controls:ImageEx Source="Assets/Webs/nasa.png" IsCacheEnabled="True" Width="16" Height="16" VerticalAlignment="Center" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton"/>
                                    <TextBlock Text="Nasa" Padding="10,0,0,0" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton"/>
                                </StackPanel>
                            </PivotItem.Header>

                            <Grid>
                                <Border BorderThickness="1" BorderBrush="{StaticResource BrushSecundario}">
                                    <controls:ImageEx x:Name="imagenNasa" IsCacheEnabled="True" Stretch="UniformToFill"/>
                                </Border>
                            </Grid>
                        </PivotItem>
                        <PivotItem Tag="2">
                            <PivotItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <controls:ImageEx Source="Assets/Webs/nationalgeographic.png" IsCacheEnabled="True" Width="16" Height="16" VerticalAlignment="Center" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton"/>
                                    <TextBlock Text="National Geographic" Padding="10,0,0,0" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton"/>
                                </StackPanel>
                            </PivotItem.Header>

                            <Grid>
                                <Border BorderThickness="1" BorderBrush="{StaticResource BrushSecundario}">
                                    <controls:ImageEx x:Name="imagenNationalGeographic" IsCacheEnabled="True" Stretch="UniformToFill"/>
                                </Border>
                            </Grid>
                        </PivotItem>
                        <PivotItem Tag="3">
                            <PivotItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <controls:ImageEx Source="Assets/Webs/space.png" IsCacheEnabled="True" Width="16" Height="16" VerticalAlignment="Center" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton"/>
                                    <TextBlock Text="Space" Padding="10,0,0,0" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton"/>
                                </StackPanel>
                            </PivotItem.Header>

                            <Grid>
                                <Border BorderThickness="1" BorderBrush="{StaticResource BrushSecundario}">
                                    <controls:ImageEx x:Name="imagenSpace" IsCacheEnabled="True" Stretch="UniformToFill"/>
                                </Border>
                            </Grid>
                        </PivotItem>
                        <PivotItem Tag="4">
                            <PivotItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <controls:ImageEx Source="Assets/Webs/reddit.png" IsCacheEnabled="True" Width="16" Height="16" VerticalAlignment="Center" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton"/>
                                    <TextBlock Text="Reddit (Earth)" Padding="10,0,0,0" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton"/>
                                </StackPanel>
                            </PivotItem.Header>

                            <Grid>
                                <Border BorderThickness="1" BorderBrush="{StaticResource BrushSecundario}">
                                    <controls:ImageEx x:Name="imagenRedditEarth" IsCacheEnabled="True" Stretch="UniformToFill"/>
                                </Border>
                            </Grid>
                        </PivotItem>
                        <PivotItem Tag="5">
                            <PivotItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <controls:ImageEx Source="Assets/Webs/reddit.png" IsCacheEnabled="True" Width="16" Height="16" VerticalAlignment="Center" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton"/>
                                    <TextBlock Text="Reddit (Space)" Padding="10,0,0,0" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton"/>
                                </StackPanel>
                            </PivotItem.Header>

                            <Grid>
                                <Border BorderThickness="1" BorderBrush="{StaticResource BrushSecundario}">
                                    <controls:ImageEx x:Name="imagenRedditSpace" IsCacheEnabled="True" Stretch="UniformToFill"/>
                                </Border>
                            </Grid>
                        </PivotItem>
                        <PivotItem Tag="6">
                            <PivotItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <controls:ImageEx Source="Assets/Webs/reddit.png" IsCacheEnabled="True" Width="16" Height="16" VerticalAlignment="Center" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton"/>
                                    <TextBlock Text="Reddit (City)" Padding="10,0,0,0" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton"/>
                                </StackPanel>
                            </PivotItem.Header>

                            <Grid>
                                <Border BorderThickness="1" BorderBrush="{StaticResource BrushSecundario}">
                                    <controls:ImageEx x:Name="imagenRedditCity" IsCacheEnabled="True" Stretch="UniformToFill"/>
                                </Border>
                            </Grid>
                        </PivotItem>
                        <PivotItem Tag="7">
                            <PivotItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <controls:ImageEx Source="Assets/Webs/reddit.png" IsCacheEnabled="True" Width="16" Height="16" VerticalAlignment="Center" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton"/>
                                    <TextBlock Text="Reddit (Map)" Padding="10,0,0,0" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton"/>
                                </StackPanel>
                            </PivotItem.Header>

                            <Grid>
                                <Border BorderThickness="1" BorderBrush="{StaticResource BrushSecundario}">
                                    <controls:ImageEx x:Name="imagenRedditMap" IsCacheEnabled="True" Stretch="UniformToFill"/>
                                </Border>
                            </Grid>
                        </PivotItem>
                    </Pivot>
                </Grid>

                <Grid x:Name="gridSeleccionarUbicacion" Visibility="Collapsed">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Button x:Name="botonVolver" Margin="40,20" Padding="10" Background="{StaticResource BrushSecundario}" HorizontalAlignment="Center" BorderBrush="{StaticResource BrushPrimario}" BorderThickness="1" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <SymbolIcon Symbol="Back" Margin="0,0,10,0" VerticalAlignment="Center" Foreground="White"/>
                                    <TextBlock x:Uid="buttonBack" Foreground="White"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>

                        <StackPanel Orientation="Vertical" Margin="40,20" BorderBrush="{StaticResource BrushSecundario}" BorderThickness="1">
                            <StackPanel.Background>
                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                    <GradientStop Color="#FFE4E4E4" Offset="0.5" />
                                    <GradientStop Color="#FFBFBFBF" Offset="1.0" />
                                </LinearGradientBrush>
                            </StackPanel.Background>

                            <TextBlock x:Uid="tbSelectLocation" Margin="30,15,30,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Button x:Name="botonAñadirFondoEscritorio" Grid.Column="0" Margin="20" Padding="10" Background="{StaticResource BrushSecundario}" BorderBrush="{StaticResource BrushPrimario}" BorderThickness="1" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                                    <Button.Content>
                                        <StackPanel Orientation="Horizontal">
                                            <fa:FontAwesome Icon="Desktop" Foreground="White" Margin="0,0,10,0"/>
                                            <TextBlock x:Uid="buttonAddWallpaper" Foreground="White"/>
                                        </StackPanel>
                                    </Button.Content>
                                </Button>

                                <Button x:Name="botonAñadirFondoBloqueo" Grid.Column="1" Margin="20" Padding="10" Background="{StaticResource BrushSecundario}" BorderBrush="{StaticResource BrushPrimario}" BorderThickness="1" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                                    <Button.Content>
                                        <StackPanel Orientation="Horizontal">
                                            <fa:FontAwesome Icon="UnlockAlt" Foreground="White" Margin="0,0,10,0"/>
                                            <TextBlock x:Uid="buttonAddLockScreen" Foreground="White"/>
                                        </StackPanel>
                                    </Button.Content>
                                </Button>
                            </Grid>
                        </StackPanel>

                        <StackPanel Orientation="Vertical" Margin="40,20" BorderBrush="{StaticResource BrushSecundario}" BorderThickness="1">
                            <StackPanel.Background>
                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                    <GradientStop Color="#FFE4E4E4" Offset="0.5" />
                                    <GradientStop Color="#FFBFBFBF" Offset="1.0" />
                                </LinearGradientBrush>
                            </StackPanel.Background>

                            <TextBlock x:Uid="tbOtherOptions" Margin="30,15,30,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Button x:Name="botonGuardarImagen" Grid.Column="0" Margin="20" Padding="10" Background="{StaticResource BrushSecundario}" BorderBrush="{StaticResource BrushPrimario}" BorderThickness="1" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton" HorizontalAlignment="Center">
                                    <Button.Content>
                                        <StackPanel Orientation="Horizontal">
                                            <fa:FontAwesome Icon="Image" Foreground="White" Margin="0,0,10,0"/>
                                            <TextBlock x:Uid="buttonSaveImage" Foreground="White"/>
                                        </StackPanel>
                                    </Button.Content>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Grid> 
        </NavigationView> 
    </Grid>
</Page>
